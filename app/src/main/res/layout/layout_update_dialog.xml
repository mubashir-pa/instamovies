<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/dialog_padding_horizontal"
    android:paddingVertical="@dimen/dialog_padding_vertical"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorTextPrimary"
        android:layout_marginBottom="15dp"
        android:text="@string/update_available"
        style="@android:style/TextAppearance.DialogWindowTitle"/>
    <TextView
        android:id="@+id/version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/red"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:id="@+id/change_log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/colorTextSecondary"
        android:layout_marginBottom="15dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="15dp">
        <Button
            android:id="@+id/later_button"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="@string/later"
            android:textColor="@color/colorButtonText"
            android:background="@drawable/bg_button_update_left"
            android:layout_weight="1"
            style="?android:attr/buttonBarButtonStyle"/>
        <Button
            android:id="@+id/update_button"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="@string/update"
            android:textColor="@color/colorButtonText"
            android:background="@drawable/bg_button_update_right"
            android:layout_weight="1"
            style="?android:attr/buttonBarButtonStyle" />
    </LinearLayout>
    <TextView
        android:id="@+id/manual_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/update_manually"
        android:textColor="@color/colorTextSecondary"
        android:textStyle="bold"
        android:textSize="12sp"/>
</LinearLayout>