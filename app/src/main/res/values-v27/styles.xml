<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style	name="AppTheme"	parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorControlHighlight</item>
        <item name="colorControlNormal">@color/colorControlNormal</item>

        <item name="android:windowBackground">@color/colorLayoutPrimary</item>
        <item name="android:navigationBarColor">@color/colorLayoutPrimary</item>
        <item name="android:windowLightNavigationBar">true</item>
        <!-- This is for alert dialogs -->
        <item name="android:alertDialogTheme">@style/AlertDialogTheme</item>
        <!-- This is for preference screen dialogs -->
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
        <item name="android:listDivider">@color/colorStrokePrimary</item>
    </style>

    <style	name="AppTheme.VideoActivity" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:keepScreenOn">true</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetDialogStyle</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>

    <style name="BottomSheetDialogDefaultTheme" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetDialogDefaultStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/colorLayoutPrimary</item>
        <item name="android:navigationBarDividerColor">@color/colorStrokePrimary</item>
    </style>
</resources>